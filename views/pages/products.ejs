<% include ../partials/header %>

<div class="container">
 <h3 >Products Information</h3> 
    <input class="form-control" id="myInput" type="text" placeholder="Search..">
    <br>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Price</th>
               <th>Edit</th>
            <th>Delete</th>
            <th><a name="" id="" class="btn btn-primary" href="/insertpro" role="button">Add New</a></th>
        </tr>
    </thead>
    <tbody id="protable" >
       <% products.forEach(function(product){ %> 
       <tr>
            <td scope="row"><%= product.id%></td>
            <td><%= product.title%></td>
            <td><%= product.price%></td>
             <td><a name="" id="" class="btn btn-danger" href="/products/<%= product.id%>" role="button">Edit</a></td>
              <td><a onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger" href="/products_delete/<%= product.id%>" role="button">Delete</a></td>
        
        </tr>
         <% }); %>
</tbody>

    
</table>
<script>
    $(document).ready(function(){
      $("#myInput").on("keyup", function() {
        var value = $(this).val().toLowerCase();
        $("#myprotable tr").filter(function() {
          $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
        });
      });
    });
    </script>

    <script>
      
   function confirmDelete(delUrl) {
  if (confirm("Are you sure you want to delete")) {
    document.location = delUrl;
  }
}
</script>
    </script>
</div>

