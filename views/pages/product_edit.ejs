<% include ../partials/header %>
<div class="jumbotron">
            <h1 class="display-3">Product Edit</h1>
<form action ="/products/update" method="post">        
<div class="form-group">
  <label for="">ID</label>
  <input type="number" name="id" id="" 
  class="form-control" value="<%= product.id %>" placeholder="" aria-describedby="helpId">
  <small id="helpId" class="text-muted">Product ID</small>
</div>
<div class="form-group">
  <label for="">Title</label>
  <input type="text" name="title" id="" 
  class="form-control" placeholder="" value="<%= product.title %>" aria-describedby="helpId">
  <small id="helpId" class="text-muted">Product Title</small>
</div>
<div class="form-group">
  <label for="">Price</label>
  <input type="number" name="price" id="" 
  class="form-control" placeholder="" value="<%= product.price %>" aria-describedby="helpId">
  <small id="helpId" class="text-muted">Product Price</small>
</div>
<a name="" id="" class="btn btn-secondary" href="/products" role="button">Cancel</a>
<button type="submit" class="btn btn-success"  >Save</button>

</div>  
</form>

<% include ../partials/footer %>